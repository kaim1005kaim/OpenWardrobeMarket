# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=owm-assets
R2_REGION=auto
R2_S3_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_BASE_URL=https://pub-xxxx.r2.dev
# Production: R2_PUBLIC_BASE_URL=https://cdn.open-wardrobe-market.com (custom domain)

# AI APIs
GOOGLE_API_KEY=your_google_api_key_for_gemini
DEEPSEEK_API_KEY=your_deepseek_api_key
IMAGINE_API_TOKEN=your_imagine_api_token

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: NEXT_PUBLIC_APP_URL=https://open-wardrobe-market.com

# API Configuration (for local development with separate API server)
VITE_API_URL=http://localhost:3001
# Production: VITE_API_URL is not needed (uses window.location.origin)